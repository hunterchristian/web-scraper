{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "exclude": ["node_modules"]
}